class DNATestCase extends DrupalUnitTestCase {
  public static function getInfo() {
    return array(
    'name' => 'DNA Unit Tests',
    'description' => 'Test DNA Module.',
    'group' => 'Examples Tests',
    );
  }

  function testDnaFinder() {

    $description = 'Input the letter "A", output the letter "A T"';
    //Arrange
    $input = 'A';
    //Act
    $result = dna_finder($input);
    //Assert
    $expected_output = 'A T';
    $this->assertTrue($result, $expected_output, $description);

    $description = 'Input the letter "AT", output the letter "AT TA"';
    //Arrange
    $input = 'at';
    //Act
    $result = dna_finder($input);
    //Assert
    $expected_output = 'TA';
    $this->assertTrue($result, $expected_output, $description);


  }

}
